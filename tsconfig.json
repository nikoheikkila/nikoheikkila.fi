{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "lib": [
            "dom",
            "es2017",
            "es2018"
        ],
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "baseUrl": "./src",
        "paths": {
            "assets/*": [
                "assets/*"
            ],
            "components/*": [
                "components/*"
            ],
            "types/*": [
                "../types/*"
            ]
        }
    },
    "include": [
        "./src/**/*",
        "./types"
    ],
    "exclude": [
        "./src/pages/*"
    ]
}