{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		":automergeBranch",
		":automergeMinor",
		":automergeRequireAllStatusChecks",
		":combinePatchMinorReleases",
		":configMigration",
		":dependencyDashboard",
		":maintainLockFilesWeekly"
	],
	"enabledManagers": [
		"bun",
		"github-actions",
		"terraform"
	],
	"schedule": [
		"every weekend"
	],
	"packageRules": [
		{
			"extends": [
				"monorepo:gatsby"
			],
			"matchUpdateTypes": [
				"digest",
				"patch",
				"minor",
				"major"
			],
			"groupName": "Gatsby packages"
		},
	]
}
