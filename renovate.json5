{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		":automergeBranch",
		":automergeMinor",
		":automergeRequireAllStatusChecks",
		":combinePatchMinorReleases",
		":configMigration",
		":dependencyDashboard",
		":maintainLockFilesWeekly"
	],
	"enabledManagers": [
		"bun",
		"github-actions",
		"terraform",
		"custom.regex"
	],
	"schedule": [
		"every weekend"
	],
	"customManagers": [
		{
			"customType": "regex",
			"managerFilePatterns": ["/^\\.github/workflows/.*\\.ya?ml$/"],
			"matchStrings": [
				"WRANGLER_VERSION:\\s*[\"']?(?<currentValue>\\d+\\.\\d+\\.\\d+)[\"']?"
			],
			"depNameTemplate": "wrangler",
			"datasourceTemplate": "npm"
		}
	],
	"packageRules": [
		{
			"extends": [
				"monorepo:gatsby"
			],
			"matchUpdateTypes": [
				"digest",
				"patch",
				"minor",
				"major"
			],
			"groupName": "Gatsby packages"
		},
		{
			"matchPackageNames": ["wrangler"],
			"groupName": "Wrangler"
		}
	]
}
